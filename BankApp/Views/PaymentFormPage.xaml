<ContentPage
    x:Class="BankApp.Views.PaymentFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BankApp.ViewModels"
    x:Name="PaymentPage"
    Title="Payment Form">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="{Binding Beneficiary.Name, StringFormat='You\'re about to pay: {0}'}" />

            <Picker
                Title="Select Account"
                ItemDisplayBinding="{Binding Number}"
                ItemsSource="{Binding Accounts}"
                SelectedItem="{Binding SelectedAccount}" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="0">
                <Label
                    FontAttributes="Bold"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="R"
                    VerticalOptions="Center" />

                <Entry
                    x:Name="AmountEntry"
                    Margin="10,0"
                    FontAttributes="Bold"
                    FontSize="40"
                    HorizontalTextAlignment="Center"
                    Keyboard="Numeric"
                    Text="{Binding Amount, Mode=TwoWay}"
                    VerticalOptions="Center"
                    WidthRequest="120" />
            </HorizontalStackLayout>

            <Button
                BackgroundColor="#2196F3"
                Command="{Binding Source={x:Reference PaymentPage}, Path=BindingContext.SubmitPaymentCommand}"
                CornerRadius="20"
                Text="Proceed to Payment"
                TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>