<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:BankApp.Views"
       x:Class="BankApp.AppShell"
       FlyoutBehavior="Disabled"
       BackgroundColor="#2196F3"
       Title="Bank App">
    
    <ShellContent Title="Beneficiaries" 
                  ContentTemplate="{DataTemplate views:BeneficiariesPage}"
                  Route="BeneficiariesPage" />
   
    
    <ShellContent Title="Payment Form"
                  ContentTemplate="{DataTemplate views:PaymentFormPage}"
                  Route="PaymentFormPage" />
    
    <ShellContent Title="Payment Review"
                  ContentTemplate="{DataTemplate views:PaymentReviewPage}"
                  Route="PaymentReviewPage" />
    
    <ShellContent Title="Result"
                  ContentTemplate="{DataTemplate views:ResultPage}"
                  Route="ResultPage" />
</Shell>
