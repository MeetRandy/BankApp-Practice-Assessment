<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="BankApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animations="clr-namespace:BankApp.Animations"
    xmlns:local="clr-namespace:BankApp">
    <Application.Resources>
        <ResourceDictionary>
            <animations:FadeAnimation x:Key="FadeAnim" />
            <animations:ScaleAnimation x:Key="ScaleAnim" />
            <DataTemplate x:Key="BeneficiariesTitleViewTemplate">
                <StackLayout Padding="10,5" BackgroundColor="#2196F3">
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        HorizontalTextAlignment="Center"
                        Text="Beneficiaries"
                        TextColor="White"
                        VerticalOptions="Center" />
                </StackLayout>
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
